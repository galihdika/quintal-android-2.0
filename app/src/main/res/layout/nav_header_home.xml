<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/ic_background_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/ibProfile_picture"
        android:src="@mipmap/ic_attendance"
        android:background="@drawable/profile_picture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_marginBottom="5dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:weightSum="1">

        <TextView
            android:text="Nama Bocah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tProfile_name"
            android:layout_weight="0.19"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:text="Kelas X IPA 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tProfile_detail"
            android:layout_weight="0.19" />

        <TextView
            android:text="SD Sebelah Sana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tProfile_school"
            android:layout_weight="0.19" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="131dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/quintal_logo"
            android:id="@+id/imageView3" />
    </FrameLayout>

</LinearLayout>
